@model BeStudent.Web.ViewModels.Course.CourseWithSemestersViewModel
@{
    this.ViewData["Title"] = $"Course {Model.Name}";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@this.ViewData["Title"]</h1>
    </div>

    <ul class="list-group list-group-flush mt-3">
        @foreach (var semester in Model.Semesters)
        {
            var remain = (semester.Year % 100) + 1;
            <li class="list-group-item">
                <a class="m-2" href="~/Semesters/Details/@semester.Id">@($"{semester.Year} / {remain} {semester.SemesterType} semester {semester.Number}")</a>
            </li>
        }
        <a class="btn btn-secondary m-4 w-25" asp-controller="Semesters" asp-action="Create" asp-route-courseName="@Model.Name" asp-route-courseId="@Model.Id">
            Add
        </a>
    </ul>
</div>