@model BeStudent.Web.ViewModels.Course.CoursesListViewModel
@{
    this.ViewData["Title"] = "List of all courses";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@this.ViewData["Title"]</h1>
    </div>

    <ul class="list-group list-group-flush mt-3">
        @foreach (var course in Model.Courses)
        {
            <li class="list-group-item">
                <i class="fas fa-university"></i>
                <a class="m-2" asp-controller="Courses" asp-action="ByName" asp-route-courseName="@course.Name" asp-route-courseId="@course.Id">
                    @course.Name
                </a>
            </li>
        }
    </ul>
    <a class="btn btn-secondary m-4 w-auto" asp-action="Create">Add</a>
</div>